<import src="../../template.wxml" />
<!--index.wxml-->
<view class="container">
  <!-- 轮播图 -->
  <swiper indicator-dots="{{true}}" autoplay="{{true}}">
    <!-- <navigator wx:for="{{recommends}}" wx:key="song_id" url="/pages/details/details?id={{item.song_id}}"> -->
      <swiper-item wx:for="{{recommends}}" wx:key="song_id" bindtap="goto" data-url="/pages/details/details?id={{item.song_id}}">
        <image src="{{item.pic_s500}}" class="slide-image" />
      </swiper-item>
    <!-- </navigator> -->
  </swiper>

  <!-- 搜索 -->
<view class="weui-search-bar__form" bindtap="goto" data-url="/pages/search/search?keyword={{keyword}}">
  <view class="weui-search-bar__box">
      <icon class="weui-icon-search_in-box" type="search" size="14"></icon>
      <input type="text" class="weui-search-bar__input" placeholder="搜索" value="{{keyword}}" />
  </view>
  <label class="weui-search-bar__label">
      <icon class="weui-icon-search" type="search" size="14"></icon>
      <view class="weui-search-bar__text">{{keyword}}</view>
  </label>
</view>

  <!-- tab标签切换 -->
  <!-- tab标签 -->
  <view class="weui-tab">
    <view class="weui-navbar">
      <!-- 标题 -->
      <view wx:for="{{tabs}}" wx:key="type" data-idx="{{index}}" data-type="{{item.type}}" class="weui-navbar__item {{activeIndex == index ? 'weui-bar__item_on' : ''}}" bind:tap="changeTab">
        <view class="weui-navbar__title">{{item.text}}</view>
      </view>

      <!-- 绿色线条 -->
      <view class="weui-navbar__slider" style="width: {{tabWidth}}px; transform: translateX({{sliderOffset}}px); "></view>
    </view>
    <view class="weui-tab__panel">
      <!-- 内容 -->
      <view wx:for="{{tabs}}" wx:key="type" class="weui-tab__content" hidden="{{activeIndex != index}}">
        <template is="list" data="{{datalist:tabData[item.type]}}" />
        <template is="more" data="{{type:item.type}}" />
      </view>
    </view>
  </view>
  <template is="panel" data="{{title:'热门歌曲',datalist:list_hot,type:2}}" />
  <template is="panel" data="{{title:'最新歌曲',datalist:list_new,type:1}}" />
</view>

<view>
  <button bindtap="getCamera">摄像头</button>
  <button bindtap="takePhoto">拍照</button>
</view>